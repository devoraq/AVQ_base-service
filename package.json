{
	"name": "avq_base-service",
	"type": "module",
	"main": "src/index.ts",
	"scripts": {
		"dev": "bun --watch src/index.ts",
		"start": "bun src/index.ts",
		"typecheck": "bun x tsc --noEmit",
		"proto:gen": "mkdir -p ./src/types/generated && protoc --plugin=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=./src/types/generated --ts_proto_opt=outputServices=grpc-js,esModuleInterop=true,useOptionals=messages ./proto/*.proto",
		"check:health": "bun run src/client/health.check.ts"
	},
	"dependencies": {
		"@grpc/grpc-js": "^1.14.0",
		"@types/pg": "^8.15.5",
		"pg": "^8.16.3",
		"reflect-metadata": "^0.2.2",
		"typeorm": "^0.3.27",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@bufbuild/protobuf": "^2.10.0",
		"@types/bun": "latest",
		"@types/node": "^24.8.1",
		"ts-proto": "^2.8.1",
		"typescript": "^5.9.3"
	},
	"module": "index.ts"
}
