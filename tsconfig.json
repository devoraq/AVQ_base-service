{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"lib": ["ES2022"],
		"types": ["bun"],
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,
		"noEmit": true,
		"baseUrl": "src",
		"paths": {
			"@config": ["./config/index.ts"],
			"@config/*": ["./config/*"],
			"@core/*": ["./core/*"],
			"@modules/*": ["./modules/*"],
			"@proto/*": ["types/generated/*"]
		}
	},
	"typeRoots": ["./node_modules/@types"],
	"include": ["src"]
}
